<resources>
    <!-- more info on custom styles - http://goo.gl/N1YVD -->
    <style name="MainButton">
        <item name="android:textSize">@dimen/textSizeMedium</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:width">@dimen/buttonWidth</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MediumText">
        <item name="android:textSize">@dimen/textSizeMedium</item>
        <item name="android:layout_margin">@dimen/padding</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TopCenterMediumText" parent="MediumText">
        <item name="android:gravity">top|center</item>
    </style>

    <style name="CenterMediumText" parent="MediumText">
        <item name="android:gravity">center</item>
    </style>

    <!-- can't remove title bar since action bar is in there - http://goo.gl/wKccB -->
    <style name="MyTheme" parent="@android:style/Theme.Holo">
    </style>

</resources>